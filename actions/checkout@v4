name: Python application

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4  # <<--- เพิ่มบรรทัดนี้

    - name: Set up Python 3.10
      uses: actions/setup-python@v4
      with:
        python-version: "3.10"
        
    # ... ส่วนที่เหลือของโค้ด Workflow ของคุณ
    
    # ... ส่วนที่คุณส่งมา (Run Genesis Node)
    - name: Run Genesis Node
      run: |
        # ทดสอบการรันระบบ
        python genesis_node.py --test
